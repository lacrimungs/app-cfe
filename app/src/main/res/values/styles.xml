<resources>
    <!-- Estilo para los textos de los días del calendario -->
    <style name="CalendarDateText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#000000</item> <!-- Negro para el texto de fechas -->
        <item name="android:textSize">18sp</item> <!-- Tamaño de texto ajustado -->
        <item name="android:typeface">serif</item> <!-- Fuente elegante -->
    </style>

    <!-- Estilo para los textos de los días de la semana del calendario -->
    <style name="CalendarWeekDayText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#777777</item> <!-- Gris para los días de la semana -->
        <item name="android:textSize">16sp</item> <!-- Tamaño de texto ajustado -->
        <item name="android:typeface">serif</item> <!-- Fuente elegante -->
    </style>

</resources>
