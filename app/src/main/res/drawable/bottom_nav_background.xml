<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Capa del borde -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="0.5dp" android:color="@color/black"/> <!-- Color del borde y grosor ajustado a 0.5dp -->
        </shape>
    </item>

    <!-- Capa del fondo blanco -->
    <item android:left="0.5dp" android:top="0.5dp" android:right="0.5dp" android:bottom="0.5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
        </shape>
    </item>
</layer-list>

