<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true"
    android:background="@drawable/bd_dialog_rounded"
    android:padding="16dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/cfe_green">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical">

<!-- Título + contador -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/seleccionar_participantes"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <com.google.android.material.chip.Chip
        android:id="@+id/chipSeleccionados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:chipIconEnabled="true"
        app:chipIcon="@android:drawable/ic_menu_agenda"
        android:text="0 seleccionados"
    app:chipBackgroundColor="@color/cfe_green"
    android:textColor="@android:color/white"
    app:chipIconTint="@android:color/white"
    app:chipStrokeWidth="0dp"/>
</LinearLayout>


<com.google.android.material.textfield.TextInputLayout
    android:id="@+id/tilBuscar"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    app:endIconMode="clear_text"
    android:hint="@string/buscar_por_nombre"
app:boxStrokeColor="@color/cfe_green"
app:hintTextColor="@color/cfe_green">

<com.google.android.material.textfield.TextInputEditText
    android:id="@+id/etBuscar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
</com.google.android.material.textfield.TextInputLayout>

    <!-- Select all -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:gravity="center_vertical"
android:layout_marginTop="4dp"
android:paddingTop="4dp">

<CheckBox
    android:id="@+id/cbSelectAll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:buttonTint="@color/cfe_green"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Seleccionar todo"
    android:layout_marginStart="8dp"/>
</LinearLayout>

    <!-- Lista -->
<androidx.recyclerview.widget.RecyclerView
android:id="@+id/rvUsuarios"
android:layout_width="match_parent"
android:layout_height="360dp"
android:layout_marginTop="8dp"/>

    <!-- Botón -->
<com.google.android.material.button.MaterialButton
android:id="@+id/btnListo"
style="@style/Widget.MaterialComponents.Button"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="12dp"
android:text="@string/listo"
app:backgroundTint="@color/cfe_green"
android:textColor="@android:color/white"/>
    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
