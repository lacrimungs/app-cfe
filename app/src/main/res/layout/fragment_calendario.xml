<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Encabezado con logos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:src="@drawable/cfe_logo"
            android:layout_marginEnd="12dp" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:src="@drawable/suterm_logo" />
    </LinearLayout>

    <!-- TÃ­tulo calendario -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#111827"
        android:gravity="center"
        android:layout_marginBottom="8dp"/>

    <!-- CalendarView nativo -->
    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:dateTextAppearance="@style/TextAppearance.AppCompat.Body1"
        android:weekDayTextAppearance="@style/TextAppearance.AppCompat.Medium"
        android:focusedMonthDateColor="#111827"
        android:unfocusedMonthDateColor="#9CA3AF"
        android:weekSeparatorLineColor="#E5E7EB"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/exportarEventosMenu"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">

        <AutoCompleteTextView
            android:id="@+id/dropdownExportar"
            style="@style/Widget.MaterialComponents.AutoCompleteTextView.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="ðŸ“¤ Exportar eventos"
            android:gravity="center_vertical"
            android:inputType="none"
            android:focusable="false"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="15sp"/>
    </com.google.android.material.textfield.TextInputLayout>



    <!-- Lista de eventos desplazable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/eventosContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?android:attr/dividerHorizontal"
            android:showDividers="middle"/>
    </ScrollView>

    <!-- Indicador de carga -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"/>
</LinearLayout>






