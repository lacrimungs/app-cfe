<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormularioActividadFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:scrollbars="vertical"
        android:background="#FFFFFF">

        <!-- Logotipos -->
        <LinearLayout
            android:id="@+id/logos_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/cfe_logo"
                android:scaleType="centerInside"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="18dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/suterm_logo"
                android:scaleType="centerInside"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"/>
        </LinearLayout>

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar actividad"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp" />

        <!-- Subtítulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrese los siguientes datos"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp" />

        <!-- Campo Nombre Actividad con micrófono -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rect_border"
            android:padding="8dp"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/nombre_actividad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Nombre de la actividad"
                android:textColor="@android:color/black"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:paddingVertical="8dp"/>

            <ImageButton
                android:id="@+id/btnMicNombre"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_btn_speak_now"
                android:contentDescription="Dictado por voz" />
        </LinearLayout>

        <!-- Campo Motivo Actividad con micrófono -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rect_border"
            android:padding="8dp"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/motivo_actividad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Motivo de la actividad"
                android:textColor="@android:color/black"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:paddingVertical="8dp"/>

            <ImageButton
                android:id="@+id/btnMicMotivo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_btn_speak_now"
                android:contentDescription="Dictado por voz" />
        </LinearLayout>

        <!-- Campo Fecha con ícono en Rectángulo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rect_border"
            android:padding="8dp"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/fecha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Fecha"
                android:focusable="false"
                android:clickable="true"
                android:textColor="@android:color/black"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:paddingVertical="8dp"/>

            <ImageView
                android:id="@+id/calendario"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/calendar_days_regular"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Spinner -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rect_border"
            android:padding="8dp"
            android:layout_marginTop="16dp">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingVertical="8dp"/>
        </LinearLayout>

        <!-- Botón Enviar -->
        <Button
            android:id="@+id/enviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar a"
            android:textColor="@android:color/white"
            android:backgroundTint="#4CAF50"
            android:layout_marginTop="14dp" />

    </LinearLayout>
</ScrollView>
