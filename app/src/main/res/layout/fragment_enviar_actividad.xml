<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".EnviarActividadFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:scrollbars="vertical"
        android:background="#FFFFFF">

        <!-- Logotipos -->
        <LinearLayout
            android:id="@+id/logos_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/cfe_logo"
                android:scaleType="centerInside"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="18dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/suterm_logo"
                android:scaleType="centerInside"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp" />
        </LinearLayout>

        <!-- Instrucción -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingrese el nombre de los encargados o colaboradores que participarán en la actividad"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginTop="32dp" />

        <!-- Barra de búsqueda (reemplaza al Spinner) -->
        <LinearLayout
            android:id="@+id/toolbarSeleccionUsuarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rect_border"
            android:paddingStart="12dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:minHeight="56dp"
            android:layout_marginTop="16dp"
            android:gravity="end|center_vertical">

            <TextView
                android:id="@+id/tvIndicadorBusqueda"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Buscar y seleccionar participantes"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <ImageButton
                android:id="@+id/btnBuscarUsuarios"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/buscar_usuarios"
                android:src="@android:drawable/ic_menu_search"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:padding="0dp" />
        </LinearLayout>

        <!-- Cuadro para mostrar la selección -->
        <LinearLayout
            android:id="@+id/display_selected_value_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rect_border"
            android:padding="8dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/selected_value_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trabajadores y colaboradores seleccionados"
                android:textColor="@android:color/black"
                android:padding="8dp"
                android:gravity="start" />
        </LinearLayout>

        <!-- Botón Registrar -->
        <Button
            android:id="@+id/enviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar actividad"
            android:textColor="@android:color/white"
            android:backgroundTint="#4CAF50"
            android:layout_marginTop="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Una vez ingresada la actividad no podrá ser eliminada"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
