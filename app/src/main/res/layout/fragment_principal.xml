<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrincipalFragment"
    android:padding="8dp"
    android:background="#FFFFFF">

    <!-- Logotipos -->
    <LinearLayout
        android:id="@+id/logos_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/cfe_logo"
            android:scaleType="centerInside"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="18dp"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/suterm_logo"
            android:scaleType="centerInside"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"/>

    </LinearLayout>

    <!-- Título -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logos_layout"
        android:layout_marginTop="16dp"
        android:text="Revisar pendientes"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />

    <!-- Sección de Reuniones -->
    <LinearLayout
        android:id="@+id/reuniones_section"
        android:layout_width="200dp"
        android:layout_height="133dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/title"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/red"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="85dp"
            android:layout_height="76dp"
            android:src="@drawable/meeting_icon"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reuniones"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_gravity="center" />
    </LinearLayout>

    <!-- Sección de Cursos (con borde negro) -->
    <LinearLayout
        android:id="@+id/cursos_section"
        android:layout_width="200dp"
        android:layout_height="133dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/reuniones_section"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/rect_border"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="85dp"
        android:layout_height="84dp"
        android:src="@drawable/moodle_icon"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cursos"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_gravity="center" />
</LinearLayout>

    <!-- Sección de Actividades -->
<LinearLayout
android:id="@+id/actividades_section"
android:layout_width="200dp"
android:layout_height="133dp"
android:layout_centerInParent="true"
android:layout_below="@id/cursos_section"
android:layout_marginTop="16dp"
android:orientation="vertical"
android:padding="16dp"
android:background="@color/cfe_green"
android:gravity="center_horizontal">

<ImageView
    android:layout_width="85dp"
    android:layout_height="84dp"
    android:src="@drawable/book_lightbulb_icon"
    android:layout_gravity="center" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Actividades"
    android:textSize="14sp"
    android:textStyle="bold"
    android:textColor="@android:color/white"
    android:layout_gravity="center" />
</LinearLayout>

    </RelativeLayout>
