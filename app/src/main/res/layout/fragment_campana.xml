<android.widget.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="#FFFFFF"
    tools:context=".PrincipalFragment">

    <!-- Contenedor principal del layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#FFFFFF">

        <!-- Logotipos -->
        <LinearLayout
            android:id="@+id/logos_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/cfe_logo"
                android:scaleType="centerInside"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="18dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/suterm_logo"
                android:scaleType="centerInside"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"/>
        </LinearLayout>

        <!-- ProgressBar de carga -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminate="true"
            android:layout_marginTop="16dp" />

        <!-- Primer contenedor para la notificación -->
        <LinearLayout
            android:id="@+id/notificacion_layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"
            android:background="#FFFFFF">

            <!-- Primer Texto para notificación -->
            <TextView
                android:id="@+id/textView_notificacion_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>

        <!-- Segundo contenedor para la notificación -->
        <LinearLayout
            android:id="@+id/notificacion_layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:layout_marginBottom="2dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Segundo Texto para notificación -->
            <TextView
                android:id="@+id/textView_notificacion_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Tercer contenedor para la notificación -->
        <LinearLayout
            android:id="@+id/notificacion_layout_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:layout_marginBottom="10dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Tercer Texto para notificación -->
            <TextView
                android:id="@+id/textView_notificacion_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

</android.widget.ScrollView>
