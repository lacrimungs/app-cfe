<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    android:gravity="center"
    android:background="@android:color/white"
    tools:context=".LoginActivity">

    <!-- Logotipos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="0.1dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/cfe_logo"
            android:scaleType="centerInside"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/suterm_logo"
            android:scaleType="centerInside"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Título con imagen al lado -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/clock_regular__1_"
            android:layout_marginEnd="300dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CFE CONNECT"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginStart="-290dp"/>
    </LinearLayout>

    <!-- Campo de entrada para Clave (RPE o RTT) -->
    <EditText
        android:id="@+id/clave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="RPE o RTT"
        android:inputType="text"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:background="@drawable/rect_border"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"/>

    <!-- Campo de entrada para Contraseña -->
    <EditText
        android:id="@+id/contraseñaLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:background="@drawable/rect_border"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"/>

    <!-- Botón de iniciar sesión -->
    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar sesión"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/cfe_green"
        android:layout_marginTop="24dp"
        android:padding="16dp"/>

    <!-- Enlace para crear cuenta -->
    <TextView
        android:id="@+id/crear_cuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿No tienes una cuenta? Crear una"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:gravity="center"/>

    <!-- Contenedor de fragmentos -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
