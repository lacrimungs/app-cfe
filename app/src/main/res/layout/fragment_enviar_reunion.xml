<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnviarReunionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:scrollbars="vertical"
        android:background="#FFFFFF">

        <!-- Logotipos -->
        <LinearLayout
            android:id="@+id/logos_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/cfe_logo"
                android:scaleType="centerInside"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="18dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/suterm_logo"
                android:scaleType="centerInside"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"/>
        </LinearLayout>

        <!-- Instrucción -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingrese el nombre de los encargados o colaboradores que participarán en la reunión"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginTop="32dp"/>

        <!-- Cuadro de búsqueda (abre el selector) -->
        <LinearLayout
            android:id="@+id/toolbarSeleccionUsuariosReu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rect_border"
            android:paddingStart="12dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:minHeight="56dp"
            android:layout_marginTop="16dp"
            android:gravity="end|center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/tvIndicadorBusquedaReu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Buscar y seleccionar participantes"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <ImageButton
                android:id="@+id/btnBuscarUsuariosReu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/buscar_usuarios"
                android:src="@android:drawable/ic_menu_search"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:padding="0dp" />
        </LinearLayout>

        <!-- Panel: seleccionados -->
        <LinearLayout
            android:id="@+id/display_selected_value_layout_reu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rect_border"
            android:padding="8dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/selected_value_text_reu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trabajadores y colaboradores seleccionados"
                android:textColor="@android:color/black"
                android:padding="8dp"
                android:gravity="start" />
        </LinearLayout>

        <!-- Botón Enviar -->
        <Button
            android:id="@+id/enviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar reunión"
            android:textColor="@android:color/white"
            android:backgroundTint="#4CAF50"
            android:layout_marginTop="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Una vez ingresada la reunión no podrá ser eliminada"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
